{
  "name": "ducky-pwn-docs",
  "private": true,
  "version": "0.0.0",
  "description": "Ducky Pwn Docs desktop security reporting suite",
  "author": {
    "name": "Ducky",
    "email": "me@aathilducky.com"
  },
  "homepage": "https://localhost/ducky-pwn-docs",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron .",
    "electron:rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.0.0",
    "docx": "^9.0.3",
    "html-to-docx": "^1.8.0",
    "nodemailer": "^6.10.0",
    "react-dom": "^19.2.4",
    "react": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "lucide-react": "^0.563.0",
    "recharts": "^3.7.0",
    "better-sqlite3": "^11.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "concurrently": "^9.0.0",
    "electron": "^26.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^7.0.1",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20"
  },
  "build": {
    "appId": "com.ducky.pwndocs",
    "productName": "DuckyPwnDocs",
    "directories": {
      "output": "release"
    },
    "files": [
      "renderer/**/*",
      "electron/**/*",
      "package.json",
      "!**/*.map",
      "!**/node_modules/.cache/**",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/tests/**",
      "!**/node_modules/**/docs/**",
      "!**/node_modules/**/examples/**"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "maintainer": "AATHILDUCKY <me@aathilducky.com>",
      "icon": "assets/icons",
      "executableName": "ducky-pwn-docs",
      "desktop": {
        "Name": "Ducky Pwn Docs",
        "Terminal": false,
        "Type": "Application",
        "Icon": "ducky-pwn-docs",
        "StartupWMClass": "ducky-pwn-docs",
        "Comment": "Ducky Pwn Docs desktop security reporting suite",
        "Categories": "Utility;"
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/app-logo.ico",
      "signAndEditExecutable": false
    },
    "icon": "assets/app-logo.png"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AATHILDUCKY/ducky-pwn-docs.git"
  },
  "license": "MIT"
}
